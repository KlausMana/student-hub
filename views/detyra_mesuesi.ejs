<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Detyrat Priza</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="materialize/css/materialize.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="css/style.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">

    <script src="main.js"></script>
</head>
<body>
    <!-- Nav-->
    <div class="navbar-fixed">
        <nav class="light-green darken-3">
          <div class="container">
            <div class="nav-wrapper">
              <a href="#" class="brand-logo">StudentHub</a>
              <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
               <ul class="right hide-on-med-and-down">
                <li>
                  <a href="/dashboardMesues">Home</a>
                </li>
                <li>
                  <a href="/detyratMesues">Detyrat e caktuara</a>
                </li>
                <li>
                    <a href="/logout">Logout</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </div>
      <!-- Section detyrat-->
      <section class="section detyra-section">
          <h3 class="center blue-text lighten-2">Detyrat</h3>
      </section>

      <!-- Cards-->
        <div class="row">
                <div class="col s12 ">
                      <div class="col s6">
                          <% for(var i = 0; i < detyrat.length; i+=2) { %>
                          <a href="#">
                            <div class="card light-green darken-3">
                                <div class="card-content white-text">
                                    <span class="card-title center">detyrat[i].emri</span>
                                    <p>detyrat[i].description</p>
                                </div>
                            </div>
                          </a>
                          <% } %>
                      </div>
                      <div class="col s6">
                        <% for(var i = 1; i < detyrat.length; i+=2) { %>
                        <a href="#">
                          <div class="card light-green darken-3">
                              <div class="card-content white-text">
                                  <span class="card-title center">detyrat[i].emri</span>
                                  <p>detyrat[i].description</p>
                              </div>
                          </div>
                        </a>
                        <% } %>
                      </div>
                </div>
          </div>

      <!-- Footer-->
      <footer class="page-footer light-green darken-3">
        <span class="footer-text1">PRIZA team&copy;</span>
      </footer>
</body>
</html>
